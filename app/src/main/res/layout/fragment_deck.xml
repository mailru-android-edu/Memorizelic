    <LinearLayout
            android:id="@+id/linlay_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/text_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:textSize="28dp"
                android:maxLines="1"
                android:textColor="@color/purple_500"
                android:background="@drawable/edit_round"
                android:text="ENGLISH"
                android:layout_weight="10" />

        <ImageView
                android:id="@+id/swipe_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:padding="5dp"
                android:src="@drawable/ic_shuffle_black_24dp" />
        <!-- Swipe language places. Needed to restAPI request-->
        <TextView
                android:id="@+id/text_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/purple_500"
                android:textSize="28dp"
                android:background="@drawable/edit_round"
                android:text="RUSSIAN"
                android:layout_marginLeft="10dp"
                android:layout_weight="10" />


    </LinearLayout>

    <LinearLayout
            android:id="@+id/linlay_cards_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linlay_language">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:text="Title: "
                android:textColor="@color/purple_500"/>


        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Literature"
                android:textSize="28dp"
                android:textColor="@color/purple_500" />


    </LinearLayout>

    <LinearLayout
            android:id="@+id/linlay_statistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linlay_cards_amount">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:text="Cards amount:"
                android:textColor="@color/purple_500"/>


        <TextView
                android:id="@+id/text_statistic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:text="2"
                android:paddingLeft="20dp"
                android:textSize="28dp"
                android:textColor="@color/purple_500" />


    </LinearLayout>



    <Button
            android:id="@+id/button_start_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/edit_round"
            android:text="Start"
            android:textSize="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linlay_statistic" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/white"
            android:background="@drawable/edit_round_add"
            android:text="Add"
            android:textSize="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_start_test" />


</androidx.constraintlayout.widget.ConstraintLayout>